name: Fetch Google Sheets Data

on:
  schedule:
    - cron: '*/15 * * * *'  # Every 15 minutes
  workflow_dispatch:  # Manual trigger
  push:
    branches: [main]

permissions:
  contents: write

jobs:
  fetch-data:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Create data directory
        run: mkdir -p data

      - name: Fetch Google Sheets data
        run: |
          curl -o data/energy-data.json \
          "https://sheets.googleapis.com/v4/spreadsheets/${{ secrets.GOOGLE_SHEET_ID }}/values/ProcessedData!A:O?key=${{ secrets.GOOGLE_API_KEY }}&majorDimension=ROWS&valueRenderOption=UNFORMATTED_VALUE"

      - name: Commit and push data
        run: |
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add data/energy-data.json
          git diff --staged --quiet || git commit -m "Update energy data $(date)"
          git push
